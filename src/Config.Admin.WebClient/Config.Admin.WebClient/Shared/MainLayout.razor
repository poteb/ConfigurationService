@using pote.Config.Admin.WebClient.Model

@inherits LayoutComponentBase

<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Configurations</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <CascadingValue Value="@PageError">
            @if (PageError.IsError)
            {
                <MudItem Class="ErrorBox">
                    <MudText>@PageError.ErrorMessage</MudText>
                </MudItem>
            }
            @Body
        </CascadingValue>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    public readonly PageError PageError = new();

    protected override void OnInitialized()
    {
        base.OnInitialized();
        PageError.SetStateHasChangedCallback(this.StateHasChanged);
    }

    protected override void OnParametersSet()
    {
        PageError.IsError = false;
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
