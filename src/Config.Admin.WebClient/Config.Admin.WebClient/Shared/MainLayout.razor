@using pote.Config.Admin.WebClient.Model

@inherits LayoutComponentBase

<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Configurations</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <CascadingValue Value="@OnError">
            @if (!_pageError.IsError)
            {
                @Body
            }
            else
            {
                <MudText>@_pageError.ErrorMessage</MudText>
            }
        </CascadingValue>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    private readonly PageError _pageError = new();

    protected override void OnParametersSet()
    {
        _pageError.IsError = false;
    }

    void OnError(string errorMessage, Exception ex)
    {
        _pageError.IsError = true;
        _pageError.ErrorMessage = errorMessage;
        this.StateHasChanged(); 
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
